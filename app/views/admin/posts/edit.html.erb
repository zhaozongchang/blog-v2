<div class="col-md-8 col-md-offset-2">
  <h1 class="text-center"> 编辑文章 </h1>

  <%= simple_form_for [:admin,@post] do |f| %>

  <%= f.input :title, label: "标题", required: true%>
  <%= f.input :author, label: "作者", required: true%>
  <%= f.input :summary, label: "文章摘要", required: true%>
  <%= f.select :category_id, @categories %>
  <%= f.kindeditor :content ,:window_onload => true  %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <br>
  <br>
  <br>
</div>
